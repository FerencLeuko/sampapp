<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

    <springProperty scope="context" name="ROOT_APPENDER" source="logging.appender" defaultValue="plain-format"/>

    <appender name="plain-format" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="CONSOLE"/>
    </appender>

    <turboFilter class="com.ferenc.reservation.log.LogFilter"/>

    <root level="info">
        <appender-ref ref="${ROOT_APPENDER}"/>
    </root>
</configuration>
